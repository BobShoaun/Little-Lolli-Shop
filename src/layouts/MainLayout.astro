---
import Layout from "./Layout.astro";

import { Icon } from "astro-icon";
---

<Layout title="Little Lolli Shop">
  <header
    class="py-3 px-10 shadow-md flex items-center gap-5 bg-white text-gray-800 sticky top-0 z-20"
  >
    <a class="flex items-center gap-5" href="/">
      <img src="/images/logo.jpeg" class="w-14" />
      <h1 class="text-xl">Little Lolli</h1>
    </a>

    <nav class="ml-auto">
      <ul class="flex gap-5">
        <li><a href="/" class="hover:underline">Home</a></li>
        <li><a href="/shop" class="hover:underline">Shop</a></li>
        <li><a href="/contact" class="hover:underline">Contact</a></li>
        <li>
          <a
            href="https://instagram.com/little.lolli.store/"
            target="_blank"
            class="hover:underline"
            ><Icon pack="mdi" name="instagram" class="w-6" /></a
          >
        </li>
        <li>
          <a
            href="https://facebook.com/littlelollistore"
            target="_blank"
            class="hover:underline"
            ><Icon pack="mdi" name="facebook" class="w-6" /></a
          >
        </li>
        <li>
          <a
            href="https://tiktok.com/@little.lolli.shop"
            target="_blank"
            class="hover:underline"
            ><Icon pack="ic" name="baseline-tiktok" class="w-6" /></a
          >
        </li>

        <li>
          <a href="/cart" class="hover:underline flex items-center gap-2">
            <Icon pack="fe" name="cart" class="w-6" /> Cart</a
          >
        </li>
      </ul>
    </nav>
  </header>

  <main class="px-14 py-14 container m-auto">
    <slot />
  </main>

  <footer class="bg-blue-100 p-5 mt-20">
    <p class="text-center">Â© 2023, Little Lolli</p>
  </footer>
</Layout>
